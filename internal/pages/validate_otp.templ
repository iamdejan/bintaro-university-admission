package pages

templ ValidateOTP(errorMessage string) {
	<!DOCTYPE html>
	<html lang="en">
		<head>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1"/>
			<title>Bintaro University Admission - Two-Factor Authentication</title>
			<style>
				* {
					margin: 0;
					padding: 0;
					box-sizing: border-box;
				}

				body {
					font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
					background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
					min-height: 100vh;
					display: flex;
					flex-direction: column;
				}

				.navbar {
					background: rgba(255, 255, 255, 0.1);
					backdrop-filter: blur(10px);
					padding: 1rem 0;
					box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
					border-bottom: 1px solid rgba(255, 255, 255, 0.2);
				}

				.navbar h1 {
					text-align: center;
					color: #fff;
					font-size: 2rem;
					font-weight: 600;
					letter-spacing: 0.5px;
					text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
				}

				.totp-container {
					flex: 1;
					display: flex;
					justify-content: center;
					align-items: center;
					padding: 2rem;
				}

				.totp-card {
					background: rgba(255, 255, 255, 0.95);
					padding: 3rem;
					border-radius: 20px;
					box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
					backdrop-filter: blur(10px);
					border: 1px solid rgba(255, 255, 255, 0.3);
					width: 100%;
					max-width: 400px;
					transform: translateY(-20px);
					animation: fadeInUp 0.8s ease-out;
				}

				@keyframes fadeInUp {
					from {
						opacity: 0;
						transform: translateY(30px);
					}
					to {
						opacity: 1;
						transform: translateY(-20px);
					}
				}

				.totp-header {
					text-align: center;
					margin-bottom: 2rem;
				}

				.totp-header h2 {
					color: #333;
					font-size: 1.8rem;
					margin-bottom: 0.5rem;
				}

				.totp-header p {
					color: #666;
					font-size: 0.9rem;
					line-height: 1.4;
				}

				.security-icon {
					font-size: 3rem;
					color: #667eea;
					margin-bottom: 1rem;
				}

				.error-alert {
					background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
					color: white;
					padding: 1rem;
					border-radius: 12px;
					margin-bottom: 1.5rem;
					border: 1px solid rgba(255, 255, 255, 0.2);
					box-shadow: 0 4px 15px rgba(255, 107, 107, 0.2);
					display: block;
					animation: slideDown 0.4s ease-out;
				}

				@keyframes slideDown {
					from {
						opacity: 0;
						transform: translateY(-10px);
					}
					to {
						opacity: 1;
						transform: translateY(0);
					}
				}

				.error-alert .alert-icon {
					display: inline-block;
					margin-right: 0.5rem;
					font-weight: bold;
				}

				.error-alert .alert-message {
					font-size: 0.9rem;
					font-weight: 500;
				}

				.form-group {
					margin-bottom: 1.5rem;
				}

				.form-group label {
					display: block;
					margin-bottom: 0.5rem;
					color: #333;
					font-weight: 500;
					font-size: 0.9rem;
				}

				.totp-input {
					width: 100%;
					padding: 1rem;
					border: 2px solid #e1e5e9;
					border-radius: 12px;
					font-size: 1.2rem;
					font-weight: 600;
					text-align: center;
					letter-spacing: 0.5rem;
					transition: all 0.3s ease;
					background: rgba(255, 255, 255, 0.9);
					font-family: "Courier New", monospace;
				}

				.totp-input:focus {
					outline: none;
					border-color: #667eea;
					box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
					transform: translateY(-1px);
				}

				.totp-input:hover {
					border-color: #c1c7d0;
				}

				.totp-input::placeholder {
					color: #999;
					letter-spacing: 0.3rem;
				}

				.verify-btn {
					width: 100%;
					padding: 0.9rem;
					background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
					color: #fff;
					border: none;
					border-radius: 12px;
					font-size: 1rem;
					font-weight: 600;
					cursor: pointer;
					transition: all 0.3s ease;
					box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
					margin-top: 1rem;
				}

				.verify-btn:hover {
					transform: translateY(-2px);
					box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
				}

				.verify-btn:active {
					transform: translateY(0);
				}

				.verify-btn:disabled {
					opacity: 0.6;
					cursor: not-allowed;
					transform: none;
				}

				.info-text {
					text-align: center;
					color: #666;
					font-size: 0.8rem;
					margin-top: 1rem;
					line-height: 1.4;
				}

				.link-below-form {
					text-align: center;
					margin-top: 1.5rem;
				}

				.link-below-form a {
					color: #667eea;
					text-decoration: none;
					font-size: 0.9rem;
					transition: color 0.3s ease;
				}

				.link-below-form a:hover {
					color: #764ba2;
					text-decoration: underline;
				}

				.countdown {
					text-align: center;
					margin-top: 1rem;
					font-size: 0.9rem;
					color: #666;
				}

				.countdown.warning {
					color: #ff6b6b;
					font-weight: 600;
				}

				@media (max-width: 480px) {
					.totp-card {
						padding: 2rem;
						margin: 1rem;
					}
					.navbar h1 {
						font-size: 1.5rem;
					}
					.totp-input {
						font-size: 1.1rem;
						letter-spacing: 0.3rem;
					}
				}
			</style>
		</head>
		<body>
			<nav class="navbar">
				<h1>
					<a style="text-decoration: none; color: white;" href="/">Bintaro University Admission</a>
				</h1>
			</nav>
			<div class="totp-container">
				<div class="totp-card">
					<div class="totp-header">
						<div class="security-icon">üîê</div>
						<h2>Two-Factor Authentication</h2>
						<p>Enter the 6-digit code from your authenticator app</p>
					</div>
					if errorMessage != "" {
						<!-- Error Alert Section -->
						<div class="error-alert" id="errorAlert">
							<span class="alert-icon">‚ö†</span>
							<span class="alert-message" id="errorMessage">{ errorMessage }</span>
						</div>
					}
					<form action="/login/validate-otp" id="totpForm" method="post">
						<div class="form-group">
							<label for="code">Authentication Code</label>
							<input type="text" id="otpCode" name="otp_code" class="totp-input" required placeholder="000000" maxlength="6" pattern="[0-9]{6}" autocomplete="one-time-code"/>
						</div>
						<button type="submit" class="verify-btn" id="verifyBtn">Verify Code</button>
					</form>
					<div class="link-below-form">
						<a href="/login">‚Üê Back to Login</a>
					</div>
				</div>
			</div>
			<script>
				// Auto-format TOTP input
				const totpInput = document.getElementById("otpCode");
				const verifyBtn = document.getElementById("verifyBtn");
				const countdownElement = document.getElementById("countdown");

				// Format input to only accept numbers
				totpInput.addEventListener("input", function (e) {
					let value = e.target.value.replace(/[^0-9]/g, "");
					if (value.length > 6) {
						value = value.slice(0, 6);
					}
					e.target.value = value;

					// Enable/disable verify button based on input length
					if (value.length === 6) {
						verifyBtn.disabled = false;
					} else {
						verifyBtn.disabled = true;
					}
				});

				// Auto-submit when 6 digits are entered
				totpInput.addEventListener("input", function (e) {
					if (e.target.value.length === 6) {
						setTimeout(() => {
							document.getElementById("totpForm").submit();
						}, 500);
					}
				});

				// Add subtle animations to form inputs
				totpInput.addEventListener("focus", function () {
					this.parentElement.style.transform = "translateY(-2px)";
				});

				totpInput.addEventListener("blur", function () {
					this.parentElement.style.transform = "translateY(0)";
				});

				// Initialize button state
				verifyBtn.disabled = true;
			</script>
		</body>
	</html>
}
